<Window x:Class="AuroraMusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aurora Music" Width="1200" Height="760" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="{StaticResource PanelBrush}" Grid.Column="0" Padding="16">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="Aurora Music" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,14"/>
                    <Button Content="Library" Margin="0,0,0,8" Command="{Binding NavigateLibraryCommand}"/>
                    <Button Content="Browser" Margin="0,0,0,8" Command="{Binding NavigateBrowserCommand}"/>
                    <Button Content="Downloads" Margin="0,0,0,8" Command="{Binding NavigateDownloadsCommand}"/>
                    <Button Content="Settings" Margin="0,0,0,8" Command="{Binding NavigateSettingsCommand}"/>
                    <Button Content="Diagnostics" Margin="0,0,0,8" Command="{Binding NavigateDiagnosticsCommand}"/>
                    <Button Content="Donate" Margin="0,0,0,8" Command="{Binding NavigateDonateCommand}"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Bottom" Margin="0,16,0,0">
                    <TextBlock Text="{Binding NowPlayingText}" Foreground="{StaticResource MutedBrush}" TextTrimming="CharacterEllipsis"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Content="⏮" Width="44" Margin="0,0,8,0" Command="{Binding PrevCommand}"/>
                        <Button Content="{Binding PlayPauseText}" Width="64" Margin="0,0,8,0" Command="{Binding PlayPauseCommand}"/>
                        <Button Content="⏭" Width="44" Command="{Binding NextCommand}"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1">
            <ContentControl Content="{Binding CurrentView}" />
        </Grid>
    </Grid>
</Window>
