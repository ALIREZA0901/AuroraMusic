<UserControl x:Class="AuroraMusic.Views.DownloadsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Downloads" FontSize="18" FontWeight="SemiBold"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" AutoGenerateColumns="False" Margin="0,14,0,0"
                  Background="#0F1722" Foreground="{StaticResource TextBrush}" BorderBrush="#243143"
                  HeadersVisibility="Column" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="2*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="Error" Binding="{Binding LastError}" Width="2*"/>
                <DataGridTextColumn Header="Downloaded" Binding="{Binding DownloadedBytes}" Width="*"/>
                <DataGridTextColumn Header="Total" Binding="{Binding TotalBytes}" Width="*"/>
                <DataGridTextColumn Header="Path" Binding="{Binding SavePath}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
