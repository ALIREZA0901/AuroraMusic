<UserControl x:Class="AuroraMusic.Views.DonateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="18">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="{StaticResource PanelBrush}" CornerRadius="14" Padding="18">
            <StackPanel>
                <TextBlock Text="Support Aurora Music" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <Image Width="260" Height="260" Source="{Binding QrImage}" Stretch="Uniform" Margin="0,6,0,12"/>
                <TextBlock Text="TRON / TRC20 Wallet" Foreground="{StaticResource MutedBrush}" />
                <TextBox Text="{Binding Wallet, Mode=OneWay}" IsReadOnly="True" Margin="0,8,0,0"/>
                <Button Content="Copy Address" Margin="0,10,0,0" Command="{Binding CopyCommand}"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Column="1" Margin="18,0,0,0">
            <TextBlock Text="Thank you!" FontSize="22" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <TextBlock Text="If Aurora Music helps you, you can donate using the wallet address on the left." Foreground="{StaticResource MutedBrush}" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>
