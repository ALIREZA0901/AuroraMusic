<UserControl x:Class="AuroraMusic.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="18" MaxWidth="860">
            <TextBlock Text="Settings" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,14"/>

            <TextBlock Text="Base Path" />
            <TextBox Text="{Binding BasePath}" />

            <TextBlock Text="Workspace Path" Margin="0,10,0,0"/>
            <TextBox Text="{Binding WorkspacePath}" />

            <TextBlock Text="Inbox Path" Margin="0,10,0,0"/>
            <TextBox Text="{Binding InboxPath}" />

            <TextBlock Text="Cache Path" Margin="0,10,0,0"/>
            <TextBox Text="{Binding CachePath}" />

            <TextBlock Text="Cache quota (GB) - default 5 on PC" Margin="0,10,0,0"/>
            <TextBox Text="{Binding CacheQuotaGb}" />

            <TextBlock Text="Cache maintenance" Margin="0,12,0,0" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <Button Content="Clear Covers Cache" Command="{Binding ClearCoversCacheCommand}" />
                <Button Content="Clear Lyrics Cache" Margin="8,0,0,0" Command="{Binding ClearLyricsCacheCommand}" />
                <Button Content="Clear Artists Cache" Margin="8,0,0,0" Command="{Binding ClearArtistsCacheCommand}" />
                <Button Content="Clear All Cache" Margin="8,0,0,0" Command="{Binding ClearAllCacheCommand}" />
            </StackPanel>

            <TextBlock Text="Ignore short tracks (seconds)" Margin="0,10,0,0"/>
            <TextBox Text="{Binding IgnoreShortTracksSeconds}" />

            <TextBlock Text="Ignore folder keywords (comma-separated)" Margin="0,10,0,0"/>
            <TextBox Text="{Binding IgnoreFolderKeywords}" />

            <TextBlock Text="Allowed extensions (comma-separated)" Margin="0,10,0,0"/>
            <TextBox Text="{Binding AllowedExtensions}" />

            <TextBlock Text="Watch folders (auto-detect changes)" Margin="0,10,0,0"/>
            <CheckBox IsChecked="{Binding WatchFolders}" />

            <TextBlock Text="Auto-enrich metadata when online" Margin="0,10,0,0"/>
            <CheckBox IsChecked="{Binding AutoEnrichWhenOnline}" />

            <TextBlock Text="Download parts (default)" Margin="0,10,0,0"/>
            <TextBox Text="{Binding DownloadPartsDefault}" />

            <TextBlock Text="Max concurrent downloads" Margin="0,10,0,0"/>
            <TextBox Text="{Binding MaxConcurrentDownloads}" />

            <StackPanel Orientation="Horizontal" Margin="0,14,0,0">
                <Button Content="Apply" Command="{Binding ApplyCommand}" Width="120"/>
                <Button Content="Open Data Folder" Margin="10,0,0,0" Command="{Binding OpenDataCommand}" />
            </StackPanel>

            <TextBlock Text="{Binding Status}" Foreground="{StaticResource MutedBrush}" Margin="0,12,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
